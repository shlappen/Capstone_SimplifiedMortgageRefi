@model SimplifiedMortgageRefi.ViewModels.ContactCustomerViewModel

@{
    ViewData["Title"] = "Contacts";
    Layout = "~/Views/Shared/_LenderLayout.cshtml";
}

@foreach (var item in Model.Customers)
{
    <h1>@item.FirstName @item.LastName</h1>
}

<h4>Add contact details below</h4>
<hr />
@if (Model.Application.Contacts != null)
{
    <div class="row mr-12 ml-12">
        <div>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Contact Date
                        </th>
                        <th>
                            Contact Message
                        </th>


                    </tr>
                </thead>
                <tbody>



                    @foreach (var item in Model.Contacts)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DateTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Result)
                            </td>

                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                     }

                </tbody>
            </table>
        </div>
    </div>
}
<div class="row mr-6 ml-6">
    <div class="col-md-6 d-inline-flex float-left">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Application.Id" />
            <div class="form-group">
                <label asp-for="Contact.Result" class="control-label"></label>
                <textarea asp-for="Contact.Result" class="form-control" placeholder="Info here"></textarea>
                <span asp-validation-for="Contact.Result" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row mr-4 ml-4">

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>